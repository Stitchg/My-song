#clallenge A stranger things

use_bpm 160
use_synth :saw


live_loop :heartbeat do
  sample :drum_heavy_kick, amp: 2
  sleep 0.5
  sample :drum_heavy_kick, amp: 2
  sleep 3.5
end
sleep 8

live_loop :spooky do
  sample :vinyl_backspin, beat_stretch: 8, amp: 2
  sleep 8
end
sleep 12

live_loop :mainTheme do
  play :c2
  sleep 0.5
  play :e2
  sleep 0.5
  play :g2
  sleep 0.5
  play :b2
  sleep 0.5
  
  play :c3
  sleep 0.5
  play :b2
  sleep 0.5
  play :g2
  sleep 0.5
  play :e2
  sleep 0.5
  
end

